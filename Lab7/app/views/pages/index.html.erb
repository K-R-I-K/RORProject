<h3><%= t('students_with_debts') %></h3>
<% @students_with_debts.each do |s| %>
  <%= t('last_name') %> <%= s.lastname %>
  <%= t('group') %> <%= s.group %>
  <%= t('session') %> <%= WinterSession.find(s.winter_session_id).year %>
  <%= t('geometry') %>: <%= s.geom %>
  <%= t('algebra') %>: <%= s.alg %>
  <%= t('IT') %>: <%= s.inf %>
  <br>
<% end %>

<h3><%= t('number_of_grades') %></h3>
1: <%= @number_of_grades[1] %><br>
2: <%= @number_of_grades[2] %><br>
3: <%= @number_of_grades[3] %><br>
4: <%= @number_of_grades[4] %><br>
